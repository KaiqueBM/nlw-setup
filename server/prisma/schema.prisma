generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Tabela
model Habit {
  id String @id @default(uuid())
  title String
  created_at DateTime

  //Criar a tabela:
  @@map("habits")
}

